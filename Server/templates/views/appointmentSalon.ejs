<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Aesthetic</title>
    <link rel="stylesheet" href="css/login.css" />
    <link rel="stylesheet" href="/jq/jquery-ui.min.css" />

    <script
      src="https://kit.fontawesome.com/154fa5a621.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <section class="background bg-centered">
      <div class="container container-centered">
        <form class="app-form" action="/bookappointmentSalon" method="POST">
          <h1 style="text-align: center">Schedule at Salon</h1>
          <div class="input-box">
            <i class="fas fa-user-alt"></i>
            <input
              type="text"
              name="name"
              placeholder="Name"
              required
              value="<%= profile.name %>"
              required
            />
          </div>
          <div class="input-box">
            <i class="fas fa-phone-alt"></i>
            <input
              type="tel"
              placeholder="Phone number"
              required
              pattern="[0-9]{10}"
              title="Mobile should not contain letters and more than 10 digits"
              name="phone"
              value="<%= profile.phone_no%>"
              required
            />
          </div>
          <div class="input-box">
            <i class="fas fa-calendar-week"></i>
            <input
              name="date"
              id="datepicker"
              placeholder="select date "
              type="text"
              pattern="[0-9./]{10}"
              required
            />
          </div>
          <div class="input-box">
            <i class="fas fa-clock"></i>
            <input name="time" type="time" placeholder="Time" required />
          </div>

          <label for="service">Choose a Serice:</label>
          <select
            class="input-box multi-box"
            name="service"
            id="service"
            multiple
            required
          >
            <% if(services.length!=0){ var i=1;
            services.forEach(function(services){ %>
            <option value="<%= services.serviceName %>">
              <%= services.serviceName %>
            </option>
            <% i++; }) %> <% } %>
          </select>
          <p class="txt-thin" style="margin-bottom: 1.5vh">
            Hold down the Ctrl (windows) or Command (Mac) button to select
            multiple options.
          </p>
          <button class="submit-btn" type="submit">schedule</button>
        </form>
      </div>
    </section>
  </body>
  <script src="/jq/jquery-3.5.1.min.js"></script>
  <script src="/jq/jquery-ui.min.js"></script>
  <script src="/js/dateval.js"></script>
  <script>
    $(function () {
      $("#datepicker").datepicker({ minDate: 0, maxDate: "+2M " });
    });
  </script>
</html>
