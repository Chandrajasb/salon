<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Aesthetic</title>

    <link rel="stylesheet" href="/css/login.css" />
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/admin.css" />
    <link rel="stylesheet" href="css/logo.css" />

    
    <script src="/js/model.js"></script>
    <script
      src="https://kit.fontawesome.com/154fa5a621.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <nav class="navbar-sec">
      <div class="navbar">
        <div class="nav-items">
         
          <a class="nav-link"  href="/adminpage" >Home</a>
          <a class="nav-link" href="/listServices">Services</a>
          <a class="nav-link" href="/userlist">users</a>
          <a class="nav-link"  href="" >appointment</a>
          <a class="nav-link" href="/addBeautician">beautician </a>
        </div>
        <div class="nav-logo">
          <h1 class="logo">AESTHETIC</h1>
        </div>
        <div class="nav-button">
          <a href="/addservice"><button >Add services</button></a>
        </div>
        <div class="nav-button">
         <button id="myBtn" >Appointments</button>
        </div>
      </div>
    </nav>

    

    <div id="myModal" class="modal">
      <!-- Modal content -->
      <div class="modal-content">
        <span class="close">&times;</span>
        <h1> Appointment at</h1>
        <div style="margin-top: 5vh">
          <a href="/"><button class="btn-nav">Doarstep appointments </button></a>
          <a href="/admin/appointmentSalon"
            ><button class="btn-nav">salon appointments</button></a
          >
        </div>
      </div>
    </div>
    <section class="mt-5" >
      <h1 style="text-align: center" >
        Appointments at DoarStep
    </h1>

    <table>
        <thead>
          <th>Name</th>
          <th>Phone Number</th>
          <th>Gender</th>
          <th>date</th>
          <th>time</th>
          <th>service</th>
          <th>status</th>
          <th>Assigned</th>
          <th>Rating</th>
          <th>feedback</th>
          <th>Beautician</th>
          <th>Assign</th>
          

        </thead>
        
            <%
           if(appointments.length!=0){
           var i=1;
           appointments.forEach(function(appointments){
           %>
           <tbody id="tbody">
               <tr>
            <td><%=appointments.name %></td>
            <td><%=appointments.phone %></td>
            <td><%=appointments.gender %></td>
            <td><%=appointments.date %></td>
            <td><%=appointments.time %></td>
            <td><%=appointments.service %></td>
            <td><%=appointments.status %></td>
            <td><%=appointments.assign %></td>
            <% if(appointments.rate == 0){ %>
            <td>Yet to Rate</td>
            <td>--</td>
            <% } else{ %> 
              <td><%=appointments.rate %></td>
            <td><%=appointments.feedback %></td>
            <% } %>
            <form action="/editAppointment/<%=appointments._id%>?_method=PUT" method="post">
            <td> <select name="assign" >
              <option >Select Beautician</option>
              
            <%
            if(beautician.length!=0){
            var i=1;
            beautician.forEach(function(beautician){
            %>
              <option value="<%=beautician._id %>"><%=beautician.name %></option>
              <%  i++; }) %>
              <% } %>

              
             
            </select></td>
            <td> <button class="btn btn-edit color-y">Assign</button></td> 
          </form>
                 
            
             </tr>
        </tbody>

            <%  i++; }) %>
             <% } %>

    </table>

    </section>


  </body>
  </html>