<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Aesthetic</title>

    <link rel="stylesheet" href="/css/login.css" />
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/admin.css" />
    <link rel="stylesheet" href="css/logo.css" />

    
    <script src="/js/model.js"></script>
    <script
      src="https://kit.fontawesome.com/154fa5a621.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <nav class="navbar-sec">
      <div class="navbar">
        <div class="nav-items">
          <a class="nav-link" href="/adminpage">Home</a>
          <a class="nav-link" href="/listServices">Services</a>
          <a class="nav-link" href="/userlist">Users</a>
          <a class="nav-link" href="/feedbacks">Messages</a>
          <a class="nav-link" href="/addBeautician">beautician </a>
        </div>
        <div class="nav-logo">
          <h1 class="logo">AESTHETIC</h1>
        </div>
        <div class="nav-button">
          <a href="/addservice"><button>Add services</button></a>
        </div>
        <div class="nav-button">
          <button id="myBtn">Appointments</button>
        </div>
      </div>
    </nav>
  
  
  
    <div id="myModal" class="modal">
      <!-- Modal content -->
      <div class="modal-content">
        <span class="close">&times;</span>
        <h1> Appointment at</h1>
        <div style="margin-top: 5vh">
          <a href="/admin/appointmentPending"><button class="btn-nav">Doarstep appointments Pending </button></a>
          <a href="/admin/appointmentPendingSalon"><button class="btn-nav">salon appointments Pending</button></a>
          <a href="/admin/appointment"><button class="btn-nav">All Doarstep appointments </button></a>
          <a href="/admin/appointmentSalon"><button class="btn-nav">All salon appointments</button></a>
  
        </div>
      </div>
    </div>

    <section class="mt-5" >
      <h1 style="text-align: center" >
        Appointments at Salon Pending
    </h1>

    <table>
        <thead>
          <th>Name</th>
          <th>Phone Number</th>
          <th>Gender</th>
          <th>date</th>
          <th>time</th>
          <th>service</th>
          <th>status</th>
          <th>Rating</th>
          <th>feedback</th>
          
          <th>Update</th>
          

        </thead>
        
            <%
           if(appointmentspendingSalon.length!=0){
           var i=1;
           appointmentspendingSalon.forEach(function(appointmentspendingSalon){
           %>
           <tbody id="tbody">
               <tr>
            <td><%=appointmentspendingSalon.name %></td>
            <td><%=appointmentspendingSalon.phone %></td>
            <td><%=appointmentspendingSalon.gender %></td>
            <td><%=appointmentspendingSalon.date %></td>
            <td><%=appointmentspendingSalon.time %></td>
            <td><%=appointmentspendingSalon.service %></td>
            <td><%=appointmentspendingSalon.status %></td>
            <% if(appointmentspendingSalon.rate == 0){ %>
            <td>Yet to Rate</td>
            <td>--</td>
            <% } else{ %> 
              <td><%=appointmentspendingSalon.rate %></td>
            <td><%=appointmentspendingSalon.feedback %></td>
            <% } %>
            <td> <form action="/editAppointmentSalon/<%=appointmentspendingSalon._id%>?_method=PUT" method="post"><input type="text" name="status" value="completed" style="display: none;"> <button class="btn btn-edit color-y">Update as Completed</button> </form>
                 </td>
            
             </tr>
        </tbody>

            <%  i++; }) %>
             <% } %>

    </table>

    </section>


  </body>
  <script src="/js/model.js"></script>
  </html>